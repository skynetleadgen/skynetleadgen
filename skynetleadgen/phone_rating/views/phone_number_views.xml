<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- List View -->
    <record id="view_phone_number_list" model="ir.ui.view">
        <field name="name">phone.number.list</field>
        <field name="model">phone.number</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Phone Numbers">
                <field name="name"/>
                <field name="rating"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_phone_number_form" model="ir.ui.view">
        <field name="name">phone.number.form</field>
        <field name="model">phone.number</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Phone Number">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="rating"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_phone_number" model="ir.actions.act_window">
        <field name="name">Phone Numbers</field>
        <field name="res_model">phone.number</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_phone_rating_root" name="Phone Ratings" sequence="10"/>
    <menuitem id="menu_phone_number" name="Phone Numbers"
              parent="menu_phone_rating_root" action="action_phone_number" sequence="20"/>

</odoo>
