<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Report Action -->
    <report
        id="action_report_manual_sales_commission"
        model="manual.sales.commission"
        string="Sales Commission Report"
        report_type="qweb-pdf"
        name="manual_sales_commission.report_sales_commission"
        file="manual_sales_commission.report_sales_commission"
        print_report_name="'Commission Report'"
    />

    <!-- QWeb Template -->
    <template id="report_sales_commission">
        <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <h2>Sales Commission Report</h2>
                    <p><strong>Employee:</strong> <span t-field="o.name"/></p>
                    <p><strong>Month:</strong> <span t-field="o.month"/></p>
                    <p><strong>No. of Leads:</strong> <span t-field="o.no_of_leads"/></p>
                    <p><strong>Commission Amount:</strong> <span t-field="o.commission_amount"/></p>
                </div>
            </t>
        </t>
    </template>
</odoo>
