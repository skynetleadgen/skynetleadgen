<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">

        <!-- Window action for Sales Commission -->
        <record id="action_sales_commission" model="ir.actions.act_window">
            <field name="name">Sales Commissions</field>
            <field name="res_model">sales.commission</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Top-level menu to make it appear as an app -->
        <menuitem id="menu_sales_commission_root"
                  name="Sales Commissions"
                  action="action_sales_commission"
                  sequence="10" />

        <!-- List view -->
        <record id="view_sales_commission_tree" model="ir.ui.view">
            <field name="name">sales.commission.tree</field>
            <field name="model">sales.commission</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="no_of_leads"/>
                    <field name="commission_amount"/>
                </list>
            </field>
        </record>

    </data>
</odoo>
