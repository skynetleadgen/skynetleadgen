        <!-- Window action for Manual Sales Commission -->
        <record id="action_sales_commission" model="ir.actions.act_window">
            <field name="name">Sales Commissions</field>
            <field name="res_model">manual.sales.commission</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Root menu (no action) -->
        <menuitem id="menu_sales_commission_root"
                  name="Sales Commissions"
                  sequence="10" />

        <!-- Submenu with action -->
        <menuitem id="menu_sales_commission_records"
                  name="Commission Records"
                  parent="menu_sales_commission_root"
                  action="action_sales_commission"
                  sequence="20" />

        <!-- Tree view -->
        <record id="view_sales_commission_tree" model="ir.ui.view">
            <field name="name">manual.sales.commission.tree</field>
            <field name="model">manual.sales.commission</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="no_of_leads"/>
                    <field name="commission_amount"/>
                </tree>
            </field>
        </record>

