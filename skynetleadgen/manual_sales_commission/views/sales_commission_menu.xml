<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action for Manual Sales Commission -->
    <record id="action_manual_sales_commission" model="ir.actions.act_window">
        <field name="name">Manual Sales Commission</field>
        <field name="res_model">manual.sales.commission</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_sales_commission_root" name="Sales Commission" sequence="10"/>
    <menuitem id="menu_sales_commission_sub" name="Manual Commission"
              parent="menu_sales_commission_root"
              sequence="10"
              action="action_manual_sales_commission"/>

    <!-- Tree View -->
    <record id="view_manual_sales_commission_tree" model="ir.ui.view">
        <field name="name">manual.sales_commission.tree</field>
        <field name="model">manual.sales.commission</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="month"/>
                <field name="no_of_leads"/>
                <field name="commission_amount"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_manual_sales_commission_form" model="ir.ui.view">
        <field name="name">manual.sales_commission.form</field>
        <field name="model">manual.sales.commission</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Manual Sales Commission">
                <!-- Header with Print Button -->
                <header>
                    <button name="%(manual_sales_commission_report_action)d"
                            type="action"
                            string="Print Commission"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="month"/>
                        <field name="no_of_leads"/>
                        <field name="commission_amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
