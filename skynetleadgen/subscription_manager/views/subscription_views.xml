<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_subscription_form" model="ir.ui.view">
        <field name="name">subscription.manager.form</field>
        <field name="model">subscription.manager</field>
        <field name="arch" type="xml">
            <form string="Subscription">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="password" password="True"/>
                        <field name="renewal_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_subscription_tree" model="ir.ui.view">
        <field name="name">subscription.manager.tree</field>
        <field name="model">subscription.manager</field>
        <field name="arch" type="xml">
            <tree string="Subscriptions">
                <field name="name"/>
                <field name="user_id"/>
                <field name="renewal_date"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_subscription" model="ir.actions.act_window">
        <field name="name">Subscriptions</field>
        <field name="res_model">subscription.manager</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first subscription
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_subscription_root" name="Subscription Manager" sequence="10"/>
    <menuitem id="menu_subscription" name="Subscriptions"
              parent="menu_subscription_root" action="action_subscription" sequence="20"/>

</odoo>
